<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/UATheader"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="UAT Test number 447996717219"
              android:textColor="@color/black"
            android:textStyle="bold"
              android:textSize="16sp"
              android:layout_marginTop="20dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <Button
            android:id="@+id/uatOnboardingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UAT Onboarding"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UATheader"

          >

    </Button>

    <Button
            android:id="@+id/uatWalletButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UAT Wallet"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uatOnboardingButton"

    >

    </Button>

    <TextView
            android:id="@+id/uatResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Response goes here"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uatWalletButton" app:layout_constraintHorizontal_bias="0.498">

    </TextView>
    <TextView
            android:id="@+id/prodHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prod Test number 7973158966"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uatResponse">

    </TextView>

    <Button
            android:id="@+id/prodOnboardingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROD Onboarding"
            android:background="@color/black"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prodHeader"

    >

    </Button>

    <Button
            android:id="@+id/prodWalletButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROD Wallet"
            android:background="@color/black"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prodOnboardingButton"

    >

    </Button>

    <TextView
            android:id="@+id/prodResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Response goes here"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prodWalletButton">

    </TextView>

    <Button
            android:id="@+id/clearCacheButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Cache"
            android:background="@color/black"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_margin="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">


    </Button>

    <Button
            android:id="@+id/makeCallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh API call"
            android:background="@color/black"
            android:textAllCaps="false"
            android:layout_margin="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>